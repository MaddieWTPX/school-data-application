@model SchoolDataApplication.Models.ViewModels.UserCreateViewModel

@*@{
    ViewData["Title"] = "Create";
}*@


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.User.FirstName" class="control-label"></label>
                <input asp-for="@Model.User.FirstName" class="form-control" />
                <span asp-validation-for="@Model.User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.LastName" class="control-label"></label>
                <input asp-for="@Model.User.LastName" class="form-control" />
                <span asp-validation-for="@Model.User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.SchoolId" class="control-label"></label>
                <select asp-for="User.SchoolId" class="form-control" asp-items="@Model.SchoolList"></select>
            </div>
            <div class="form-group">
                <label asp-for="User.UserTypeId" class="control-label"></label>
                <select asp-for="User.UserTypeId" class="form-control" asp-items=@Model.UserTypeList>
                    <option disabled selected>Please select:</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.DateOfBirth" class="control-label"></label>
                <input asp-for="@Model.User.DateOfBirth" class="form-control" />
                <span asp-validation-for="@Model.User.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.YearGroupId" class="control-label"></label>
                <select asp-for="User.YearGroupId" class="form-control" asp-items="@Model.YearGroupList">
                    <option disabled selected>Please select:</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
