@model SchoolDataApplication.Models.ViewModels.UserCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@Model.Title</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.User.FirstName" class="control-label"></label>
                <input asp-for="@Model.User.FirstName" class="form-control" />
                <span asp-validation-for="@Model.User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.LastName" class="control-label"></label>
                <input asp-for="@Model.User.LastName" class="form-control" />
                <span asp-validation-for="@Model.User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.School" class="control-label"></label>
                <select asp-for="@Model.User.School" class ="form-control" asp-items="@Model.SchoolList"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.DateOfBirth" class="control-label"></label>
                <input asp-for="@Model.User.DateOfBirth" class="form-control" />
                <span asp-validation-for="@Model.User.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.YearGroup" class="control-label"></label>
                <select asp-for="@Model.User.YearGroup" class ="form-control" asp-items="@Model.YearGroupList">
                    <option value="">Please select</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="User.UserTypeId" class="control-label"></label>
                <select asp-for="User.UserTypeId" class ="form-control" asp-items=@Model.UserTypeList></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
